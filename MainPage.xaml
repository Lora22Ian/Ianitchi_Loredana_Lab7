<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ianitchi_Loredana_Lab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="pisica.jpeg"
                SemanticProperties.Description="Imi plac pisicile!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Buna la toti! Ma numesc Lore"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="30"
                HorizontalOptions="Center" />

            <Label
                Text="Bun venit in lumea mea :)"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Bun venit in aplicatia mea"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Apasa aici"
                SemanticProperties.Hint="Numara de cate ori apesi"
                Clicked="OnCounterClicked"
                HorizontalOptions="CenterAndExpand" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
